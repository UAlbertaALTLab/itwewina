name: "Transitive animate verb basic paradigm"
paradigm: 'verb-ta.paradigm'
layout:
  type: "basic"
tooltips: 
  eng:
    "Independent": "I/you/we VERB"
    "Conjunct": "...that I/you/we VERB"
    "2s → 1s": "You VERB me" 
    "1s → 2s": "I VERB you"
    "1s → 3s": "I VERB her/him"
    "2s → 3s": "You VERB her/him"
    "3s → 1s": "S/he VERBs me"
    "3s → 2s": "S/he VERBs you"
    "3s → 4":  "S/he VERBs him/her"
    "4 → 3s":  "S/he VERBs him/her"
