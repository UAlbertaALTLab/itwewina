ApplicationSettings:
  app_name: "Nettidigisanat"
  app_meta_title: "Neahttadigisánit"
  short_name: "sanat"
  default_locale: "fi"
  default_pair: ["olo", "fin"]
  mobile_default_pair: false
  locales_available:
    - "fi"
    - "no"
    - "lv"
    - "ru"
    - "et"
  # TODO: someone will have to decide on the meta keywords and
  # descriptions for google.
  meta_description: >
     Free, mobile-friendly dictionaries for Olonetsian, Livonian, and Kven.
  meta_keywords: >
     kven, olonets, olonetsian, livonian, livvi, liivi 
  admins_to_email:
    - "rueter.jack@gmail.com"
    - "trond.trosterud@uit.no"

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'
 
Morphology:
  olo:
    tool: *LOOKUP
    file: [*OPT, '/olo/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/olo/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fin/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  liv:
    tool: *LOOKUP
    file: [*OPT, '/liv/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/liv/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  livM:
    tool: *LOOKUP
    file: [*OPT, '/liv/bin/analyser-dict-gt-desc-mobile.xfst']
    inverse_file: [*OPT, '/liv/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fkv:
    tool: *LOOKUP
    file: [*OPT, '/fkv/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fkv/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  izh:
    tool: *LOOKUP
    file: [*OPT, '/izh/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/izh/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  nob:
    tool: *LOOKUP
    file: [*OPT, '/nob/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/nob/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "#+Cmp+"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: olo
  - iso: fin
  - iso: liv
  - iso: livM
  - iso: fkv
  - iso: izh
  - iso: nob
  - iso: est
  - iso: lav

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: olo
    target: fin
    path: 'dicts/olo-all.xml'
  - source: liv
    target: fin
    path: 'dicts/liv-all.xml'
    input_variants:
      - type: "standard"
        description: "Standard (äǟ)"
        # NB: must be same as analyser name
        short_name: "liv"
      - type: "mobile"
        description: "Mobile friendly (a &rarr; ä ~ ǟ)"
        short_name: "livM"
  - source: fin
    target: liv
    path: 'dicts/finliv.xml'
  - source: liv
    target: est
    path: 'dicts/liv-all.xml'
    input_variants:
      - type: "standard"
        description: !gettext "Standard (äǟ)"
        # NB: must be same as analyser name
        short_name: "liv"
      - type: "mobile"
        description: !gettext "Mobile friendly (a &rarr; ä ~ ǟ)"
        short_name: "livM"
  - source: liv
    target: lav
    path: 'dicts/liv-all.xml'
    input_variants:
      - type: "standard"
        description: !gettext "Standard (äǟ)"
        # NB: must be same as analyser name
        short_name: "liv"
      - type: "mobile"
        description: !gettext "Mobile friendly (a &rarr; ä ~ ǟ)"
        short_name: "livM"
  - source: izh
    target: fin
    path: 'dicts/izh-all.xml'
  - source: fkv 
    target: nob
    path: 'dicts/fkvnob.xml'
  - source: nob
    target: fkv
    path: 'dicts/nobfkv.xml'

