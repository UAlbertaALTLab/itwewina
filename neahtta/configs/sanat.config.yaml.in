ApplicationSettings:
  app_name: "Nettidigisanat"
  app_meta_title: "Neahttadigisánit"
  short_name: "sanat"
  default_locale: "fi"
  default_pair: ["olo", "fin"]
  new_style_templates: true
  mobile_default_pair: false
  grouped_nav: true
  new_mobile_nav: true
  locales_available:
    - "fi"
    - "no"
    - "lv"
    - "ru"
    - "et"
  # TODO: someone will have to decide on the meta keywords and
  # descriptions for google.
  meta_description: >
     Free, mobile-friendly dictionaries for Olonetsian, and Kven.
  meta_keywords: >
     kven, olonets, olonetsian, karelian
  admins_to_email:
    - "rueter.jack@gmail.com"
    - "trond.trosterud@uit.no"

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'
 
Morphology:
  olo:
    tool: *LOOKUP
    file: [*OPT, '/olo/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/olo/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fin/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  vep:
    tool: *LOOKUP
    file: [*OPT, '/vep/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/vep/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fkv:
    tool: *LOOKUP
    file: [*OPT, '/fkv/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fkv/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  nob:
    tool: *LOOKUP
    file: [*OPT, '/nob/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/nob/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "#+Cmp+"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: olo
    minority_lang: true
  - iso: fkv
    minority_lang: true
  - iso: vep
    minority_lang: true

  - iso: fin
  - iso: nob
  - iso: lav
  - iso: est

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  # olo
  - source: olo
    target: fin
    path: 'dicts/olo-all.xml'
  - source: fin
    target: olo
    path: 'dicts/finolo.xml'

  # fkv
  - source: fkv 
    target: nob
    path: 'dicts/fkvnob.xml'
  - source: nob
    target: fkv
    path: 'dicts/nobfkv.xml'

  # vep
  - source: vep
    target: fin
    path: 'dicts/vep-all.xml'

  - source: vep
    target: est
    path: 'dicts/vep-all.xml'

ReaderConfig:
  olo:
    multiword_lookups: false
    word_regex: |
      [\u00C0-\u1FFF\u2C00-\uD7FF\w'’]+
    word_regex_opts: "g"
