ApplicationSettings:
  app_name: "Neahttadigisánit"
  app_meta_title: "Neahttadigisánit"
  short_name: "saan"
  default_locale: "sms"
  default_pair: ["sms", "fin"]
  mobile_default_pair: false
  locales_available:
    - sms
    - fi
    - en
  meta_description: >
      Free online, mobile friendly dictionaries for Nenets
  meta_keywords: >
      nenets, nenetsi, mobile, dictionary, free, russian

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  sms:
    tool: *LOOKUP
    file: [*OPT, '/sms/bin/dict-sms.fst']
    inverse_file: [*OPT, '/sms/bin/dict-isms-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/dict-fin.fst']
    inverse_file: [*OPT, '/fin/bin/dict-ifin-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: sms
  - iso: eng
  - iso: fin
  - iso: rus
  - iso: nob

Dictionaries:
  - source: sms
    target: fin
    path: 'dicts/sms-all.xml'
  - source: sms
    target: eng
    path: 'dicts/sms-all.xml'
  - source: sms
    target: rus
    path: 'dicts/sms-all.xml'
  - source: sms
    target: nob
    path: 'dicts/sms-all.xml'

