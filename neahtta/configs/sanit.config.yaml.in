# Default locale, but use ISO 2 code or whatever corresponds to what is
# in the translations directory.

ApplicationSettings:
  app_name: "Neahttadigisánit"
  short_name: "sanit"
  default_locale: "se"
  default_pair: ["sme", "nob"]
  mobile_default_pair: ["SoMe", "nob"]
  # admins_to_email:
  #   - "someone.goes.here@email.com"
  locales_available:
    - "se"
    - "no"
    - "fi"
    - "en"
  app_meta_title: >
     Nordsamiske ordbøker
  meta_description: >
     Gratis online mobilvennlige nordsamiske ordbøker 
  meta_keywords: >
     samisk ordbok, på nett, mobil ordbok, ordbok app, sanakirjat,
     sanakirja, sátnegirjjit, sátnegirji, nordsamisk, finsk, norsk,
     pohjoissaame, davvisámegiella north sámi, norwegian, finnish,
     sámegiella, sámi language, mobil ordbok
  admins_to_email:
    - "trond.trosterud@uit.no"
    - "lene.antonsen@uit.no"

UnitTests:
 - "tests.sme_lexicon"
 - "tests.fin_lexicon"

# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi'

# Morphological system definitions. Since YAML variables aren't able to
# be used in concatenating strings, certain paths with references must
# be lists. These are concatenated automatically.
Morphology:
  sme:
    tool: *LOOKUP
    file: [*OPT, '/sme/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/sme/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options: &sme_fst_options
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  SoMe:
    tool: *LOOKUP
    file: [*OPT, '/sme/bin/analyser-dict-gt-desc-mobile.xfst']
    inverse_file: [*OPT, '/sme/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      <<: *sme_fst_options
  nob:
    tool: *LOOKUP
    file: [*OPT, '/nob/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/nob/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "#+Cmp+"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fin/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: sme
    minority_lang: true
  - iso: SoMe
    variant: True # this makes the fab process skip attempting `svn up` here.
  - iso: nob
  - iso: fin
  - iso: eng

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: sme
    target: nob
    path: 'dicts/sme-nob.all.xml'
    autocomplete: false
    show_korp_search: True
    # use http://meyerweb.com/eric/tools/dencoder/ if things are
    # unreadable or do not work
    #
    # Here, whatever the user input is will be replaced into the
    # following string, marked by USER_INPUT
    wordform_search_url: &alt_korp_search 
      "http://gtweb.uit.no/korp/#search=word%7CUSER_INPUT&page=0"
    #
    # Here, whatever the input lemma is will be replaced into the
    # following string, marked by INPUT_LEMMA
    #
    # cqp|[lemma = "INPUT_LEMMA"]
    lemma_search_url: &korp_lemma_search 
      "http://gtweb.uit.no/korp/#page=0&search-tab=2&search=cqp%7C%5Blemma%20%3D%20%22INPUT_LEMMA%22%5D"
    # "] [word = "
    lemma_multiword_delimiter: &korp_lemma_delim 
      "%22%5D%20%5Bword%20%3D%20%22"
    input_variants:
      # "mobile" is important, otherwise templates and swapping won't
      # work
      - type: "standard"
        description: !gettext "Standard"
        # description: !gettext "Standárda"
        example: "(<em>áčđŋšŧž</em>)"
        short_name: "sme"
      - type: "mobile"
        description: !gettext "Social media"
        # description: !gettext "Sosiála media"
        # example: !gettext "(maiddái <em>acdnstz</em>)"
        example: !gettext "(incl. <em>acdnstz</em>)"
        short_name: "SoMe"

  - source: nob
    target: sme
    path: 'dicts/nob-sme.all.xml'
    show_korp_search: True
    autocomplete: true
    wordform_search_url: 
      "http://gtweb.uit.no/korp/?mode=parallel#parallel_corpora=nob&page=0&search=cqp%7C%5Bword%20%3D%20%22USER_INPUT%22%5D%3A%20%3CLINKED_CORPUS%3E%20%5B%5D"
    lemma_search_url: 
      "http://gtweb.uit.no/korp/?mode=parallel#parallel_corpora=nob&search=cqp%7C%5Blemma+%3D+%22INPUT_LEMMA%22%5D&page=0"
    lemma_multiword_delimiter: *korp_lemma_delim

  - source: sme
    target: fin
    path: 'dicts/sme-fin.all.xml'
    autocomplete: false
    show_korp_search: True
    wordform_search_url: *alt_korp_search
    lemma_search_url: *korp_lemma_search
    lemma_multiword_delimiter: *korp_lemma_delim
    input_variants:
      # "mobile" is important, otherwise templates and swapping won't
      # work
      - type: "standard"
        description: !gettext "Standárda (<em>áčđŋšŧž</em>)"
        short_name: "sme"
      - type: "mobile"
        description: !gettext "Sosiála media (maiddái <em>acdnstz</em>)"
        short_name: "SoMe"

  - source: fin
    target: sme
    path: 'dicts/fin-sme.all.xml'
    autocomplete: true

