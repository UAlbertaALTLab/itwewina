# Default locale, but use ISO 2 code or whatever corresponds to what is
# in the translations directory.

ApplicationSettings:
  app_name: "Neahttadigisánit"
  short_name: "sanit"
  default_locale: "se"
  default_pair: ["sme", "nob"]
  mobile_default_pair: ["SoMe", "nob"]
  locales_available:
    - "se"
    - "no"
    - "fi"

  meta_description: >
     Gratis online mobilvennlige nordsamiske ordbøker 
  meta_keywords: >
     samisk ordbok, på nett, mobil ordbok, ordbok app, sanakirjat,
     sanakirja, sátnegirjjit, sátnegirji, nordsamisk, finsk, norsk,
     pohjoissaame, davvisámegiella north sámi, norwegian, finnish,
     sámegiella, sámi language, mobil ordbok

# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  gthome: &GTHOME '/home/neahtta/gtsvn'
  opt: &OPT '/opt/smi'

# Morphological system definitions. Since YAML variables aren't able to
# be used in concatenating strings, certain paths with references must
# be lists. These are concatenated automatically.
Morphology:
  sme:
    tool: *LOOKUP
    file: [*OPT, "/sme/bin/n-sme.fst"]
    inverse_file: [*OPT, "/sme/bin/dict-isme-norm.fst"]
    format: 'xfst'
    options: &sme_fst_options
      compoundBoundary: "  + #"
      derivationMarker: "suff."
      tagsep: ' '
      inverse_tagsep: '+'
  SoMe:
    tool: *LOOKUP
    file: [*OPT, "/sme/bin/some-n-sme.fst"] 
    inverse_file: [*OPT, "/sme/bin/dict-isme-norm.fst"]
    format: 'xfst'
    options:
      <<: *sme_fst_options
  nob:
    tool: *LOOKUP
    file: [*OPT, '/nob/bin/nob.fst']
    inverse_file: [*OPT, '/nob/bin/inob.fst']
    format: 'xfst'
    options:
      compoundBoundary: "#+Cmp+"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/fin.fst']
    inverse_file: [*OPT, '/fin/bin/ifin.fst']
    format: 'xfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: sme
    name:
      sme: "davvisámegiella"
      eng: "Northern Sámi"
      # eng: !_ "Northern Sámi"
      nob: "nordsamisk"
      fin: "pohjoissaame"

  - iso: SoMe
    name:
      sme: "davvisámegiella (#SoMe)"
      eng: "Northern Sámi (#SoMe)"
      # eng: !_ "Northern Sámi"
      nob: "nordsamisk (#SoMe)"
      fin: "pohjoissaame (#SoMe)"

  - iso: nob
    name:
      sme: "dárogiella"
      eng: "Norwegian"
      nob: "norsk"
      fin: "norja"

  - iso: fin
    name:
      sme: "suomagiella"
      eng: "Finnish"
      nob: "finsk"
      fin: "suomi"

  - iso: eng
    name:
      sme: "eŋgelasgiella"
      eng: "English"
      nob: "engelsk"
      fin: "englanti"

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: sme
    target: nob
    path: 'dicts/sme-nob.all.xml'

  - source: SoMe
    target: nob
    path: 'dicts/sme-nob.all.xml'

  - source: nob
    target: sme
    path: 'dicts/nob-sme.all.xml'

  - source: sme
    target: fin
    path: 'dicts/sme-fin.all.xml'

  - source: SoMe
    target: fin
    path: 'dicts/sme-fin.all.xml'

  - source: fin
    target: sme
    path: 'dicts/fin-sme.all.xml'

# Abstracting display formats out here, because there are different
# requirements for different languages and different wordforms.

# for help see sample config file.
Paradigms:
  fin:
    N:
      - "Sg+Par"
      - "Sg+Gen"
      - "Pl+Par"
    V:
      - "Act+Ind+Prt+Sg1"
      - "Act+Ind+Pst+Sg3"
      - "Pss+Ind+Prt+Pe4"

  sme: &smeparadigms
    PRON:
      - "Pregenerate"
    A:
      - "Attr"
      - "Pl+Nom"
      - "Comp+Attr"
      - "Comp+Sg+Nom"
      - "Superl+Sg+Nom"

    NUM:
      - "Pl+Nom"
      - "Pl+Gen"

    # N+G3 is generated using morphological overrides (sme.py)
    N:
      - "Sg+Gen"
      - "Sg+Ill"
      - "Pl+Ill"
    PROP:
      - "Sg+Gen"
      - "Sg+Ill"
      - "Sg+Loc"

    V:
      - "Ind+Prs+Sg1"
      - "Ind+Prt+Sg1"
      - "Ind+Prs+ConNeg"

  SoMe: 
    <<: *smeparadigms
  
  nob:
    V:
      - "Imp"
      - "Ind+Prs"
      - "Ind+Prt"
      - "PrfPtc"

TagSets:
  sme:
    pos: [
      "N", "V", "A", "Pr", "Po", "Num", 
      
      "pron.", "subst.", "verb", "adj."
    ]
    type: ["NomAg", "G3", "aktor", "res."]
    # Do not display analyses with these tag parts
    hideanalysis: 
      - "dem."
      - "neg."
      - "pers."
      - "pron."
      - "refl."
      - "res."

