# Default locale, but use ISO 2 code or whatever corresponds to what is
# in the translations directory.

ApplicationSettings:
  app_name: "Neahttadigisánit"
  short_name: "sanit"
  default_locale: "se"
  default_pair: ["sme", "nob"]
  mobile_default_pair: ["SoMe", "nob"]
  # admins_to_email:
  #   - "someone.goes.here@email.com"
  locales_available:
    - "se"
    - "no"
    - "fi"
    - "en"
  app_meta_title: >
     Nordsamiske ordbøker 
  meta_description: >
     Gratis online mobilvennlige nordsamiske ordbøker 
  meta_keywords: >
     samisk ordbok, på nett, mobil ordbok, ordbok app, sanakirjat,
     sanakirja, sátnegirjjit, sátnegirji, nordsamisk, finsk, norsk,
     pohjoissaame, davvisámegiella north sámi, norwegian, finnish,
     sámegiella, sámi language, mobil ordbok

# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  gthome: &GTHOME '/home/neahtta/gtsvn'
  opt: &OPT '/opt/smi'

# Morphological system definitions. Since YAML variables aren't able to
# be used in concatenating strings, certain paths with references must
# be lists. These are concatenated automatically.
Morphology:
  sme:
    tool: *LOOKUP
    file: [*OPT, "/sme/bin/dict-sme.fst"]
    inverse_file: [*OPT, "/sme/bin/dict-isme-norm.fst"]
    format: 'xfst'
    options: &sme_fst_options
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  SoMe:
    tool: *LOOKUP
    file: [*OPT, "/sme/bin/some-sme.fst"] 
    inverse_file: [*OPT, "/sme/bin/dict-isme-norm.fst"]
    format: 'xfst'
    options:
      <<: *sme_fst_options
  nob:
    tool: *LOOKUP
    file: [*OPT, '/nob/bin/dict-nob.fst']
    inverse_file: [*OPT, '/nob/bin/dict-inob-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "#+Cmp+"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/dict-fin.fst']
    inverse_file: [*OPT, '/fin/bin/dict-ifin-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: sme
  - iso: SoMe
  - iso: nob
  - iso: fin
  - iso: eng

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: sme
    target: nob
    path: 'dicts/sme-nob.all.xml'
    show_korp_search: True
    input_variants:
      # "mobile" is important, otherwise templates and swapping won't
      # work
      - type: "standard"
        description: "standard TODO"
        short_name: "sme"
      - type: "mobile"
        description: "mobile TODO"
        short_name: "SoMe"
  - source: nob
    target: sme
    path: 'dicts/nob-sme.all.xml'

  - source: sme
    target: fin
    path: 'dicts/sme-fin.all.xml'
    show_korp_search: True
    input_variants:
      # "mobile" is important, otherwise templates and swapping won't
      # work
      - type: "standard"
        description: "Standárda (<em>áčđŋšŧž</em>)"
        short_name: "sme"
      - type: "mobile"
        description: "Sosiála media (maiddái <em>acdnstz</em>)"
        short_name: "SoMe"

  - source: fin
    target: sme
    path: 'dicts/fin-sme.all.xml'

