ReaderConfig:
  Settings:
    # do not include scheme here, or things break
    api_host: "localhost:5000/itwewina"
    media_host: "localhost:5000/itwewina"
    reader_symbol: "Ā"
  crk:
    multiword_lookups: false
    word_regex: |
      [\u00C0-\u1FFF\u2C00-\uD7FF\w\-']+
    word_regex_opts: "g"

