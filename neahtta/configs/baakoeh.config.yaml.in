Languages:
  - iso: nob
  - iso: fin
  - iso: sma
    minority_lang: true
#$#  - iso: sme


# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:

  - source: sma
    target: nob
    autocomplete: true
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/korp"
    path: 'dicts/sma-nob.all.xml'

  - source: nob
    target: sma
    path: 'dicts/nob-sma.all.xml'

