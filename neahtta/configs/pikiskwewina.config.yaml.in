ApplicationSettings:
  app_name: "NeahttadigisÃ¡nit"
  short_name: "pikiskwewina"
  default_locale: "crk"
  default_pair: ["crk", "eng"]
  mobile_default_pair: false
  locales_available:
    - crk
    - en
  meta_description: >
      Free online, mobile friendly dictionaries for Plains Cree
  meta_keywords: >
      plains cree, mobile, dictionary, free

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  crk:
    tool: *LOOKUP
    file: [*OPT, '/crk/bin/dict-crk.fst']
    inverse_file: [*OPT, '/crk/bin/dict-icrk-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  eng:
    tool: *LOOKUP
    file: [*OPT, '/eng/bin/dict-eng.fst']
    inverse_file: [*OPT, '/eng/bin/dict-ieng-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: crk
    name: {}
  - iso: eng
    name: {}

Dictionaries:
  - source: crk
    target: eng
    path: 'dicts/crk-all.xml'

# (sourcelang, targlang)
# V: "v."
# FST format: "user friendly"
TagTransforms:

  (crk, eng):
    V: "v."
    N: "n."



