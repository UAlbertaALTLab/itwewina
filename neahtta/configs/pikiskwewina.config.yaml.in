ApplicationSettings:
  app_name: "Neahttadigisánit"
  app_meta_title: "Neahttadigisánit"
  short_name: "pikiskwewina"
  default_locale: "crk"
  default_pair: ["crk", "eng"]
  mobile_default_pair: false
  locales_available:
    - crk
    - en
  meta_description: >
      Free online, mobile friendly dictionaries for Plains Cree
  meta_keywords: >
      plains cree, mobile, dictionary, free

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  crk:
    tool: *LOOKUP
    file: [*OPT, '/crk/bin/dict-crk.fst']
    inverse_file: [*OPT, '/crk/bin/dict-icrk-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: crk
  - iso: eng

Dictionaries:
  - source: crk
    target: eng
    path: 'dicts/crkeng.xml'

