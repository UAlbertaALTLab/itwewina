ApplicationSettings:
  app_name: "Neahttadigis치nit"
  app_meta_title: "Neahttadigis치nit"
  short_name: "pikiskwewina"
  default_locale: "crk"
  default_pair: ["crk", "eng"]
  mobile_default_pair: false
  locales_available:
    - crk
    - en
  meta_description: >
      Free online, mobile friendly dictionaries for Plains Cree
  meta_keywords: >
      plains cree, mobile, dictionary, free

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  crk:
    tool: *LOOKUP
    file: [*OPT, '/crk/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/crk/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  crkM:
    tool: *LOOKUP
    file: [*OPT, '/crk/bin/analyser-dict-gt-desc-mobile.xfst']
    inverse_file: [*OPT, '/crk/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: crk
  - iso: eng

Dictionaries:
  - source: crk
    target: eng
    path: 'dicts/crkeng.xml'
    input_variants: &spell_relax
      - type: "standard"
        description: !gettext "Standard (a칙)"
        # NB: must be same as analyser name
        short_name: "crk"
      - type: "mobile"
        description: !gettext "Mobile friendly (a &rarr; a ~ 칙)"
        short_name: "crkM"

