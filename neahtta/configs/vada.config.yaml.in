ApplicationSettings:
  app_name: "NeahttadigisÃ¡nit"
  short_name: "vada"
  default_locale: "yrk"
  default_pair: ["yrk", "fin"]
  mobile_default_pair: false
  locales_available:
    - yrk
    - fi
    - en
  meta_description: >
      Free online, mobile friendly dictionaries for Nenets
  meta_keywords: >
      nenets, nenetsi, mobile, dictionary, free, russian

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  yrk:
    tool: *LOOKUP
    file: [*OPT, '/yrk/bin/dict-yrk.fst']
    inverse_file: [*OPT, '/yrk/bin/dict-iyrk-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/dict-fin.fst']
    inverse_file: [*OPT, '/fin/bin/dict-ifin-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: yrk
  - iso: eng
  - iso: fin
  - iso: rus

Dictionaries:
  - source: yrk
    target: eng
    path: 'dicts/yrk-all.xml'

  - source: yrk
    target: fin
    path: 'dicts/yrk-all.xml'

# (sourcelang, targlang)
# V: "v."
# FST format: "user friendly"
TagTransforms:

  (yrk, eng):
    V: "v."
    N: "n."
    A: "adj."

  (yrk, fin):
    V: "v."
    N: "s."
    A: "adj."

  (yrk, yrk):
    V: "v."
    N: "s."
    A: "adj."

