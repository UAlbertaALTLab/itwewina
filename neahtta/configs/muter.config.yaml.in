ApplicationSettings:
  app_name: "Neahttadigisánit"
  mobile_bookmark_name: "NDS: мутер"
  short_name: "muter"
  default_locale: "mrj"
  default_pair: ["mrj", "fin"]
  mobile_default_pair: false
  locales_available:
    - mrj
    - fi
    - en
  # TODO: more keywords and descriptions
  app_meta_title: "Mari dictionaries"
  meta_description: >
      Free online, mobile friendly dictionaries for Eastern and Western Mari
  meta_keywords: >
      eastern mari, western mari, hill mari, meadow mari, mobile, dictionary, free, russian
  admins_to_email:
    - "rueter.jack@gmail.com"
    - "trond.trosterud@uit.no"

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  mrj:
    tool: *LOOKUP
    file: [*OPT, '/mrj/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/mrj/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  mhr:
    tool: *LOOKUP
    file: [*OPT, '/mhr/bin/analyser-dict-gt-desc.hfstol']
    inverse_file: [*OPT, '/mhr/bin/generator-dict-gt-norm.hfstol']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fin/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: mrj
    minority_lang: true
  - iso: mhr
    minority_lang: true
  - iso: eng
  - iso: fin
  - iso: rus

Dictionaries:
  - source: fin
    target: mrj
    path: 'dicts/finmrj.xml'

  - source: mrj
    target: fin
    path: 'dicts/mrj-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: mhr
    target: fin
    path: 'dicts/mhr-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

ReaderConfig:
  Settings:
    api_host: "sanit.oahpa.no/reader/muter"
    media_host: "sanit.oahpa.no"
