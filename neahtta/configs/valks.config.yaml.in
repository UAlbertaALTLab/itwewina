ApplicationSettings:
  app_name: "Neahttadigisánit"
  app_meta_title: "Neahttadigisánit"
  short_name: "valks"
  default_locale: "ru"
  default_pair: ["myv", "rus"]
  mobile_default_pair: false
  grouped_nav: true
  new_mobile_nav: true
  locales_available:
    - myv
    - mdf
    - ru
    - fi
    - fr
  meta_description: >
      Free online, mobile friendly dictionaries for Erzya and Moksha Mordvin
  meta_keywords: >
      erzya, ersä, mokša, moksha, erzya mordvin, moksha mordvin, mobile,
      эрзя, мокша, русский, эрзянский, мокшанский, валкс, финский, 
      deutsch, ersänisch, finnisch, mokschanisch, russisch, frei,
      sanakirjat, sanakirja, словарь, dictionary, Wörterbücher, free, erza, français,
      mokcha, finnois, эрзянь, мокшень, рузонь, финнэнь, финнонь,
      французонь, англань
  admins_to_email:
    - "rueter.jack@gmail.com"
    - "trond.trosterud@uit.no"

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  hfst_lookup: &HLOOKUP '/usr/local/bin/hfst-optimized-lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  myv:
    tool: *LOOKUP
    file: [*OPT, '/myv/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/myv/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  mdf:
    tool: *HLOOKUP
    file: [*OPT, '/mdf/bin/analyser-dict-gt-desc.hfst']
    inverse_file: [*OPT, '/mdf/bin/generator-dict-gt-norm.hfst']
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fin/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  deu:
    tool: *LOOKUP
    file: [*OPT, '/deu/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/deu/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  rus:
    tool: *LOOKUP
    file: [*OPT, '/rus/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/rus/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: myv
    minority_lang: true

  - iso: mdf
    minority_lang: true

  - iso: eng
  - iso: fin
  - iso: rus
  - iso: fra
  - iso: deu

Dictionaries:
  - source: myv
    target: fin
    path: 'dicts/myv-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: fin
    target: myv
