ApplicationSettings:
  app_name: "Neahttadigisánit"
  app_meta_title: "Neahttadigisánit"
  short_name: "valks"
  default_locale: "ru"
  default_pair: ["myv", "rus"]
  mobile_default_pair: false
  grouped_nav: true
  new_mobile_nav: true
  locales_available:
    - myv
    - mdf
    - ru
    - fi
    - fr
  meta_description: >
      Free online, mobile friendly dictionaries for Erzya Mordvin and Moksha
  meta_keywords: >
      erzya, ersä, mokša, moksha, erzya mordvin, moksha mordvin, mobile,
      эрзя, мокша, русский, зрзянский, мокшанский, валкс, финский,
      sanakirjat, sanakirja, словарь, dictionary, free, erza, français,
      mokcha, finnois, эрзянь, мокшень, рузонь, финнэнь, финнонь,
      французонь, англань
  admins_to_email:
    - "rueter.jack@gmail.com"
    - "trond.trosterud@uit.no"

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  myv:
    tool: *LOOKUP
    file: [*OPT, '/myv/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/myv/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Cmp-"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  mdf:
    tool: *LOOKUP
    file: [*OPT, '/mdf/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/mdf/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/analyser-dict-gt-desc.xfst']
    inverse_file: [*OPT, '/fin/bin/generator-dict-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: myv
    minority_lang: true

  - iso: mdf
    minority_lang: true

  - iso: eng
  - iso: fin
  - iso: rus
  - iso: fra

Dictionaries:
  - source: myv
    target: fin
    path: 'dicts/myv-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: fin
    target: myv
    path: 'dicts/finmyv.xml'

  - source: myv
    target: rus
    path: 'dicts/myv-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: myv
    target: eng
    path: 'dicts/myv-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: myv
    target: fra
    path: 'dicts/myv-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: mdf
    target: fin
    path: 'dicts/mdf-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

  - source: fin
    target: mdf
    path: 'dicts/finmdf.xml'

  - source: mdf
    target: fra
    path: 'dicts/mdf-all.xml'
    show_korp_search: True
    korp_search_host: "http://gtweb.uit.no/u_korp"

ReaderConfig:
  myv:
    multiword_lookups: false
    word_regex: |
      [\u00C0-\u1FFF\u2C00-\uD7FF\w\-']+
    word_regex_opts: "g"
