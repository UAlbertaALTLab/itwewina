ApplicationSettings:
  app_name: "Neahttadigisánit"
  app_meta_title: "Neahttadigisánit"
  short_name: "valks"
  default_locale: "ru"
  default_pair: ["myv", "rus"]
  mobile_default_pair: false
  locales_available:
    - myv
    - mdf
    - ru
    - fi
    - fr
  meta_description: >
      Free online, mobile friendly dictionaries for Erzya Mordvin and Moksha
  meta_keywords: >
      erzya, ersä, mokša, moksha, erzya mordvin, mobile, dictionary, free

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  myv:
    tool: *LOOKUP
    file: [*OPT, '/myv/bin/dict-myv.fst']
    inverse_file: [*OPT, '/myv/bin/dict-imyv-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  mdf:
    tool: *LOOKUP
    file: [*OPT, '/mdf/bin/dict-mdf.fst']
    inverse_file: [*OPT, '/mdf/bin/dict-imdf-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*OPT, '/fin/bin/dict-fin.fst']
    inverse_file: [*OPT, '/fin/bin/dict-ifin-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: myv
    name:
      eng: "Erzya Mordvin"
      nob: "Erzya Mordvin"
      fin: "Erzya Mordvin"
  - iso: mdf
    name:
      eng: "Moksha"
      nob: "Moksha"
      fin: "Moksha"
  - iso: eng
    name:
      eng: "english"
      nob: "english"
      fin: "english"
  - iso: fin
    name:
      eng: "finnish"
      nob: "finnish"
      fin: "finnish"
  - iso: rus
    name:
      eng: "russian"
      nob: "russian"
      fin: "russian"
  - iso: fra
    name:
      eng: "french"
      nob: "fransk"
      fin: "ranska"

Dictionaries:
  - source: myv
    target: eng
    path: 'dicts/myv-all.xml'

  - source: myv
    target: fin
    path: 'dicts/myv-all.xml'

  - source: myv
    target: rus
    path: 'dicts/myv-all.xml'

  - source: myv
    target: fra
    path: 'dicts/myv-all.xml'

  - source: mdf
    target: fin
    path: 'dicts/mdf-all.xml'

  - source: mdf
    target: fra
    path: 'dicts/mdf-all.xml'

# (sourcelang, targlang)
# V: "v."
# FST format: "user friendly"
TagTransforms:

  (myv, rus):
    V: "v."
    N: "s."
    A: "adj."

  (mdf, rus):
    V: "v."
    N: "s."
    A: "adj."

  (myv, myv):
    V: "v."
    N: "s."
    A: "adj."

  (mdf, mdf):
    V: "v."
    N: "s."
    A: "adj."

