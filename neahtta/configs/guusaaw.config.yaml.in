ApplicationSettings:
  app_name: "NeahttadigisÃ¡nit"
  short_name: "guusaaw"
  default_locale: "hdn"
  default_pair: ["hdn", "eng"]
  mobile_default_pair: false
  locales_available:
    - hdn
    - en
  meta_description: >
      Free online, mobile friendly dictionaries for Northern Haida
  meta_keywords: >
      northern haida, mobile, dictionary, free

Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  opt: &OPT '/opt/smi/'

Morphology:
  hdn:
    tool: *LOOKUP
    file: [*OPT, '/hdn/bin/dict-hdn.fst']
    inverse_file: [*OPT, '/hdn/bin/dict-ihdn-norm.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  eng:
    tool: *LOOKUP
    file: [*OPT, '/eng/bin/eng.fst']
    inverse_file: [*OPT, '/eng/bin/ieng.fst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: hdn
    name:
      eng: "Northern Haida"
  - iso: eng
    name:
      eng: "English"

Dictionaries:
  - source: hdn
    target: eng
    path: 'dicts/hdn.all.xml'

Paradigms:
  hdn:
    PRON:
      - "Pregenerate"
    V:
     - "SFut"
     - "Dpast"
     - "Neg+SFut"
     - "Hab+Dpast"

TagSets:
  hdn:
    pos: ["N", "V", "Num"]
    type: ["NomAg"]


# (sourcelang, targlang)
# V: "v."
# FST format: "user friendly"
TagTransforms:

  (hdn, eng):
    V: "verb"
    N: "noun"
    Basic: "basic"
    Prs: "present"
    Hab: "habitual"
    Neg: "negative"
    DPast: "dpast"
    PHab: "phab"
    SFut: "sfuture"
    IFut: "ifuture"
    NFut: "nfuture"
    3Pl: "3rd plural"
    YesNo: "yes-no"
    Cmd: "cmd"
    Qst: "question"
    PlCmd: "pl cmd"
    IncCmd: "inc cmd"
    



